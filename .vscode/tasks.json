{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "python2.7",
            "args": ["-m", "pytest", "Unit_Tests/", "-v"],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Current Test File",
            "type": "shell",
            "command": "python2.7",
            "args": ["-m", "pytest", "${relativeFile}", "-v"],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
